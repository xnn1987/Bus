<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:text="@string/drivermanager_current_environment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/big_size" />

    <ImageView
        android:id="@+id/driving_iv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/content_smart"
        android:src="@drawable/driving_manager_highway" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="@string/drivermanager_current_analysis"
        android:textSize="@dimen/big_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/driving_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/driving_manager_back"
            android:gravity="center"
            android:textSize="@dimen/big_size" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/drivermanager_current_advices"
        android:textSize="@dimen/big_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/driving_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/driving_manager_back"
            android:gravity="center"
            android:textSize="@dimen/big_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical" >

        <ToggleButton
            android:id="@+id/driving_manager_speack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:textOff="@string/drivermanager_current_speech_disable"
            android:textOn="@string/drivermanager_current_speech_enable"
            android:textSize="@dimen/normal_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:contentDescription="@string/content_smart"
            android:src="@drawable/driving_manager_microphone" />
    </RelativeLayout>

</LinearLayout>