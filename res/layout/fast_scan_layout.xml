<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fast_scan_search"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/content_smart"
            android:scaleType="matrix"
            android:src="@drawable/fast_scan_search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fast_scan_car_test"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_size" />

                <TextView
                    android:id="@+id/fast_scan_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxHeight="70dp"
                    android:minWidth="70dp"
                    android:text="100"
                    android:textColor="@color/green"
                    android:textSize="@dimen/large_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fast_scan_score"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_size" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/fast_scan_progress_bar"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:indeterminateOnly="false"
                android:max="100"
                android:maxHeight="13dip"
                android:minHeight="13dip"
                android:progress="90"
                android:progressDrawable="@drawable/fast_scan_progress_bar" />

            <ProgressBar
                android:id="@+id/fast_scan_progress_bar_shadow"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:indeterminateOnly="false"
                android:max="100"
                android:maxHeight="13dip"
                android:minHeight="13dip"
                android:progress="90"
                android:progressDrawable="@drawable/fast_scan_progress_bar_shadow" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/fast_scan_scan_time_1"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/fast_scan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:minWidth="25dp"
                    android:singleLine="true"
                    android:text="555"
                    android:textColor="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/fast_scan_scan_time_2"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/fast_scan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:minWidth="28dp"
                    android:singleLine="true"
                    android:text="02"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/fast_scan_faults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/fast_scan_scan_time_3"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableBottom="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fast_scan_tv_with_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/fast_scan_fault_code"
        android:textColor="@color/white"
        android:textSize="@dimen/big_size" />

    <TableLayout
        android:id="@+id/fast_scan_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/fast_scan_iv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:drawableTop="@drawable/fast_scan_iv0"
                    android:gravity="center"
                    android:text="@string/fast_scan_all"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/fast_scan_tv0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@+id/fast_scan_iv0"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_num_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/fast_scan_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:drawableTop="@drawable/fast_scan_iv1"
                    android:gravity="center"
                    android:text="@string/fast_scan_chassis"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/fast_scan_tv1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@+id/fast_scan_iv1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_num_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/fast_scan_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:drawableTop="@drawable/fast_scan_iv2"
                    android:gravity="center"
                    android:text="@string/fast_scan_carrosserie"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/fast_scan_tv2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@+id/fast_scan_iv2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_num_size" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/fast_scan_iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:drawableTop="@drawable/fast_scan_iv3"
                    android:gravity="center"
                    android:text="@string/fast_scan_engine"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/fast_scan_tv3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@+id/fast_scan_iv3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_num_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/fast_scan_iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:drawableTop="@drawable/fast_scan_iv4"
                    android:gravity="center"
                    android:text="@string/fast_scan_network"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/fast_scan_tv4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@+id/fast_scan_iv4"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_num_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:drawableTop="@drawable/fast_scan_iv1"
                    android:visibility="invisible" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/fast_scan_clear_dtc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/fast_scan_clear_dtc"
            android:textSize="@dimen/big_size"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>